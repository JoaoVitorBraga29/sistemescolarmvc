@model SistemaEscolar.Models.Aluno
@{
    ViewData["Title"] = "Cadastrar Aluno";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow p-4" style="width: 500px; border-radius: 15px;">
        <h3 class="text-center mb-4">Cadastrar Aluno</h3>

        <form asp-action="Cadastrar" method="post">

            <div class="mb-3">
                <label asp-for="Nome" class="form-label fw-semibold"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Idade" class="form-label fw-semibold"></label>
                <input asp-for="Idade" class="form-control" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Materia" class="form-label fw-semibold"></label>
                <input asp-for="Materia" class="form-control" />
                <span asp-validation-for="Materia" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Nota" class="form-label fw-semibold"></label>
                <input asp-for="Nota" class="form-control" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success px-4">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancelar</a>
            </div>

        </form>
    </div>
</div>
<a asp-controller="Login" asp-action="Index" class="btn btn-outline-primary w-100 mt-3">
    Voltar ao Login
</a>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
