@model List<SistemaEscolar.Models.Aluno>

<h2 class="text-center mb-4">Lista de Alunos</h2>

<div class="text-end mb-3">
    <a asp-action="Cadastrar" class="btn btn-primary">Adicionar Aluno</a>
</div>

<table class="table table-striped table-bordered shadow">
    <thead class="table-dark">
        <tr>
            <th>Nome</th>
            <th>Idade</th>
            <th>Matéria</th>
            <th>Nota</th>
            <th style="width:180px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model)
        {
            <tr>
                <td>@aluno.Nome</td>
                <td>@aluno.Idade</td>
                <td>@aluno.Materia</td>
                <td>@aluno.Nota</td>
                <td>
                    <a asp-action="Detalhes" asp-route-id="@aluno.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Editar" asp-route-id="@aluno.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Excluir" asp-route-id="@aluno.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
