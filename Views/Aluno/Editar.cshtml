@model SistemaEscolar.Models.Aluno

<h2 class="text-center mb-4">Editar Aluno</h2>

<div class="card shadow mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <form asp-action="Editar">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Idade" class="form-label"></label>
                <input asp-for="Idade" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Materia" class="form-label"></label>
                <input asp-for="Materia" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Nota" class="form-label"></label>
                <input asp-for="Nota" class="form-control" />
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                <button class="btn btn-primary">Salvar Alterações</button>
            </div>
        </form>
    </div>
</div>
