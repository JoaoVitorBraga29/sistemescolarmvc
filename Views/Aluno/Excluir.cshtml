@model SistemaEscolar.Models.Aluno

<h2 class="text-center mb-4 text-danger">Excluir Aluno</h2>

<div class="card border-danger shadow mx-auto" style="max-width: 600px;">
    <div class="card-body">

        <p class="text-center">Tem certeza que deseja excluir o aluno:</p>

        <h4 class="text-center">@Model.Nome</h4>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

            <form asp-action="ConfirmarExclusao" method="post">
                <input type="hidden" asp-for="Id" />
                <button class="btn btn-danger">Excluir</button>
            </form>
        </div>

    </div>
</div>
